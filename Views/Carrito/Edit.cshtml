@model GameCursos.Models.Carrito

@{
    ViewData["Title"] = "Editar";
}

<style>
    body {
        width: 100%;
        background-color: black;
        background-image: url(https://cdn.dribbble.com/users/1454037/screenshots/5632782/media/8355d33330af35e5e4c09306c688d067.gif);
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .form-container {
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .form-container form {
        background-color: rgba(0, 0, 0, 0.7);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
    }



    .form-container label {
        color: #ffcc00;
        /* Cambia el color de las etiquetas */
        margin-bottom: 20px;
        font-size: 30px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .form-container input[type="text"] {
        background-color: #333;
        /* Cambia el fondo de los campos de texto */
        color: white;
        /* Cambia el color del texto en los campos de texto */
        border: 1px solid #ffcc00;
        /* Cambia el borde de los campos de texto */
    }

    .form-container input[type="submit"] {
        background-color: #ff6600;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
        /* Agregar margen superior para espacio entre el botón y el formulario */
    }

    .form-container h2 {
        font-size: 24px;
        /* Aumenta el tamaño del título "Cantidad" */
        margin: 10px 0;
        /* Añade margen en la parte superior e inferior del título "Cantidad" */
    }

 .fondo {
    background: rgba(255, 255, 255, 0.722); /* Fondo blanco con una opacidad del 20% */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px;
    border-radius: 10px;
}

/* Estilos para los títulos "Editar" y "Proforma" */
.fondo h1, .fondo h4 {
    text-align: center;
    background-image: linear-gradient(to right, #ff6600, #33cc33, #ff9900, #00ccff, #ff3300);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin: 0; /* Elimina el margen entre los títulos */
    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.4); /* Agrega una sombra a los títulos */
}
.volver {
    text-align: center;
    margin-top: 20px; /* Agregar margen superior para separar del formulario */
}

.volver a {
    background-color: #ff6600;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    display: inline-block;
    font-weight: bold;
    text-transform: uppercase;
    transition: background-color 0.3s ease; /* Agregar una transición suave al color de fondo */
}

.volver a:hover {
    background-color: #ff3300; /* Cambia el color de fondo al pasar el mouse por encima */
}
</style>
<div class="fondo">
        <h1>Editar</h1>
        <h4>Proforma</h4>
    </div>

<div class="form-container">
    <div class="col-md-4">
        <form asp-controller="Carrito" asp-action="Save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserID" />
            <input type="hidden" asp-for="Precio" />
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="volver">
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}